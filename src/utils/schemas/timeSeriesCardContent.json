{
  "type": "object",
  "required": ["content", "dataSource"],
  "properties": {
    "values": {
      "type": "object"
    },
    "size": { "enum": ["SMALL", "MEDIUM", "WIDE", "LARGE", "XLARGE"] },
    "content": {
      "type": "object",
      "properties": {
        "series": {
          "type": "array",
          "items": { "$ref": "#/definitions/line" },
          "minItems": 1
        },
        "alertRanges": {
          "type": "array",
          "items": { "$ref": "#/definitions/alertRange" },
          "minItems": 1
        },
        "xLabel": {
          "type": "string"
        },
        "yLabel": {
          "type": "string"
        },
        "unit": {
          "type": "string"
        }
      },
      "required": ["series"],
      "propertyNames": {
        "enum": ["series", "alertRanges", "xLabel", "yLabel", "unit", "timeDataSourceId"]
      }
    },
    "dataSource": {
      "type": "object",
      "properties": {
        "attributes": {
          "type": "array",
          "items": { "$ref": "#/definitions/attribute" },
          "minItems": 1
        },
        "additionalData": {
          "$ref": "#/definitions/additionalData"
        },
        "timeGrain": { "enum": ["month", "day", "year", "hour", "week", "input"] },
        "groupBy": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        }
      },
      "required": ["attributes"],
      "propertyNames": { "enum": ["attributes", "range", "timeGrain", "groupBy", "additionalData"] }
    }
  },
  "definitions": {
    "line": {
      "type": "object",
      "properties": {
        "label": { "type": "string" },
        "dataSourceId": { "type": "string" },
        "color": { "type": "string" }
      },
      "required": ["label", "dataSourceId"],
      "propertyNames": { "enum": ["label", "dataSourceId", "color"] }
    },
    "attribute": {
      "type": "object",
      "properties": {
        "aggregator": {
          "enum": ["max", "min", "mean", "last", "count", "first", "sum", "std"]
        }
      }
    },
    "additionalData": {
      "type": "object",
      "properties": {
        "type": { "type": "string" }
      },
      "required": ["type"],
      "propertyNames": { "enum": ["type", "dataFilter"] }
    },
    "alertRange": {
      "type": "object",
      "properties": {
        "color": { "type": "string" },
        "startTimestamp": { "type": "number" },
        "endTimestamp": { "type": "number" },
        "details": { "type": "string" }
      },
      "required": ["startTimestamp", "endTimestamp", "color"],
      "propertyNames": { "enum": ["color", "startTimestamp", "endTimestamp", "details"] }
    }
  }
}
